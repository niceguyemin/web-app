generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Seed configuration
// Run: npx prisma db seed
// Generator outputs seedClient
// generator dbSeed {
//   provider = "prisma-db-seed"
//   preview  = true
// }

model Client {
  id        Int      @id @default(autoincrement())
  name      String
  gender    String?
  phone     String?
  birthDate String?
  height    Float?
  weight    Float?
  notes     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  services     Service[]
  payments     Payment[]
  measurements Measurement[]
  appointments Appointment[]
}

model Service {
  id          Int      @id @default(autoincrement())
  clientId    Int
  client      Client   @relation(fields: [clientId], references: [id], onDelete: Cascade)
  type        String
  totalSessions Int
  remainingSessions Int
  totalPrice  Float
  status      String   @default("ACTIVE") // ACTIVE, COMPLETED
  createdAt   DateTime @default(now())
  
  payments    Payment[]
  appointments Appointment[]
}

model Payment {
  id        Int      @id @default(autoincrement())
  clientId  Int
  client    Client   @relation(fields: [clientId], references: [id], onDelete: Cascade)
  serviceId Int?
  service   Service? @relation(fields: [serviceId], references: [id])
  amount    Float
  date      DateTime @default(now())
  type      String?  // CASH, CARD, TRANSFER
  expenses  Expense[]
}

model Expense {
  id          Int      @id @default(autoincrement())
  category    String
  amount      Float
  description String?
  date        DateTime @default(now())
  paymentId   Int?
  payment     Payment? @relation(fields: [paymentId], references: [id])
}

model Measurement {
  id        Int      @id @default(autoincrement())
  clientId  Int
  client    Client   @relation(fields: [clientId], references: [id], onDelete: Cascade)
  weight    Float
  height    Float?
  bmi       Float?
  date      DateTime @default(now())
}

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  password  String   // Hashed with bcrypt
  role      String   @default("USER") // ADMIN, USER
  name      String?
  color     String?  @default("#3B82F6") // Default blue
  createdAt DateTime @default(now())

  appointments Appointment[]
  logs         Log[]
}

model ServiceType {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
}

model Appointment {
  id        Int      @id @default(autoincrement())
  clientId  Int
  client    Client   @relation(fields: [clientId], references: [id], onDelete: Cascade)
  serviceId Int?
  service   Service? @relation(fields: [serviceId], references: [id])
  userId    Int?
  user      User?    @relation(fields: [userId], references: [id])
  date      DateTime
  notes     String?
  status    String   @default("SCHEDULED") // SCHEDULED, COMPLETED, CANCELLED
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Log {
  id           Int      @id @default(autoincrement())
  action       String
  details      String?
  userId       Int?
  user         User?    @relation(fields: [userId], references: [id])
  createdAt    DateTime @default(now())
  relatedId    Int?
  relatedTable String?
  previousData Json?
  isUndone     Boolean  @default(false)
}
